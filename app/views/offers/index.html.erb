<!DOCTYPE html>
<html>
<head>

  <title>Lemon</title>

</head>
<body>

<h1>Offers</h1>

<div class="container">
  <% @offers.each do |offer| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><a href="<%= offer_path(offer) %>"><%= offer.description %></a></h5>
        <p class="card-text">
          <strong>Price:</strong> <%= number_to_currency(offer.price) %><br>
          <strong>Location:</strong> <%= offer.location %><br>
        </p>
      </div>
    </div>
  <% end %>
</div>

</body>
</html>
